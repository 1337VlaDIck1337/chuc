<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Контейнер для ImageView с градиентным оверлеем -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pupu"
            android:contentDescription="Фоновое изображение" />
            
        <!-- Градиентный оверлей для плавного перехода -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_transition" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#CD8649">

        <EditText
            android:id="@+id/login"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Логин"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:minHeight="40dp"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:hint="Пароль"
            android:textColorHint="@color/black"
            android:minHeight="40dp"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <Button
            android:id="@+id/logIn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#698DB8"
            android:text="Войти"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>

